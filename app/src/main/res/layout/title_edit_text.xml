<?xml version="1.0" encoding="utf-8"?>
<com.leon.estimate_new.utils.custom_views.CustomTextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text_input_layout"
    style="@style/TextInputLayout"
    android:layout_width="match_parent"
    app:hintTextAppearance="@style/TextHelper"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_input_edit_text"
        style="@style/TextInput"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="@dimen/text_size_medium" />
</com.leon.estimate_new.utils.custom_views.CustomTextInputLayout>