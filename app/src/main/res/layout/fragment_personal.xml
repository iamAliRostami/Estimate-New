<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="personalVM"
            type="com.leon.estimate_new.fragments.forms.PersonalViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.forms.PersonalFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/text_view_title"
            style="@style/Title"
            android:layout_centerHorizontal="true"
            android:text="@string/moshakhasat_malek" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linear_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:background="@drawable/border_gray_1">

            <RelativeLayout
                android:id="@+id/relative_layout_track"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white_1"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toEndOf="parent"
                custom:layout_constraintStart_toEndOf="@id/relative_layout_bill_id"
                custom:layout_constraintTop_toTopOf="parent"
                custom:layout_constraintWidth_percent="0.3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_track_number_title"
                    style="@style/BaseTitleForm"
                    android:text="@string/shomare_peygiri" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_track_number"
                    style="@style/BaseForm"
                    android:layout_below="@id/text_view_track_number_title"
                    android:text="@{personalVM.trackNumber}" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_bill_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/low_dp"
                android:layout_marginBottom="@dimen/low_dp"
                android:background="@drawable/border_white_1"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toStartOf="@id/relative_layout_track"
                custom:layout_constraintStart_toEndOf="@id/relative_layout_zone"
                custom:layout_constraintTop_toTopOf="parent"
                custom:layout_constraintWidth_percent="0.35">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_bill_id_title"
                    style="@style/BaseTitleForm"
                    android:text="@string/bill_id" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_bill_id"
                    style="@style/BaseForm"
                    android:layout_below="@id/text_view_bill_id_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_zone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white_1"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toStartOf="@id/relative_layout_bill_id"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toTopOf="parent"
                custom:layout_constraintWidth_percent="0.3">

                <TextView
                    android:id="@+id/text_view_zone_title"
                    style="@style/BaseTitleForm"
                    android:text="@string/zone" />

                <TextView
                    android:id="@+id/text_view_zone"
                    style="@style/BaseForm"
                    android:layout_below="@id/text_view_zone_title"
                    android:text="@{personalVM.zoneTitle}" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_submit"
            android:layout_below="@id/linear_layout_title">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relative_layout_base_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/low_dp"
                    android:background="@drawable/border_gray_1"
                    android:padding="@dimen/low_dp">


                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={personalVM.firstName}"
                        custom:layout_constraintEnd_toEndOf="parent"
                        custom:layout_constraintTop_toTopOf="parent"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/title_edit_text_family"
                        custom:title_text="@string/name" />

                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_family"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={personalVM.sureName}"
                        custom:layout_constraintStart_toStartOf="parent"
                        custom:layout_constraintTop_toTopOf="parent"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/title_edit_text_father_name"
                        custom:title_text="@string/family" />


                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_father_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={personalVM.fatherName}"
                        custom:layout_constraintEnd_toEndOf="parent"
                        custom:layout_constraintTop_toBottomOf="@id/title_edit_text_name"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/title_edit_text_shenasname"
                        custom:title_text="@string/father_name" />

                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_shenasname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="@={personalVM.shenasname}"
                        custom:layout_constraintStart_toStartOf="parent"
                        custom:layout_constraintTop_toBottomOf="@id/title_edit_text_family"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/title_edit_text_family"
                        custom:title_text="@string/shenasname" />


                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_national_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="10"
                        android:text="@={personalVM.nationalId}"
                        custom:layout_constraintEnd_toEndOf="parent"
                        custom:layout_constraintTop_toBottomOf="@id/title_edit_text_father_name"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/title_edit_text_postal_code"
                        custom:title_text="@string/nation_id" />

                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_postal_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="10"
                        android:text="@={personalVM.postalCode}"
                        custom:layout_constraintStart_toStartOf="parent"
                        custom:layout_constraintTop_toBottomOf="@id/title_edit_text_shenasname"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/edit_text_mobile"
                        custom:title_text="@string/postal_code" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_layout_base_info"
                    android:layout_margin="@dimen/low_dp"
                    android:background="@drawable/border_gray_1"
                    android:padding="@dimen/low_dp">


                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_radif"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="number"
                        android:text="@={personalVM.radif}"
                        custom:layout_constraintEnd_toEndOf="parent"
                        custom:layout_constraintTop_toTopOf="parent"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/edit_text_eshterak"
                        custom:title_text="@string/radif" />

                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_eshterak"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="number"
                        android:text="@={personalVM.eshterak}"
                        custom:layout_constraintStart_toStartOf="parent"
                        custom:layout_constraintTop_toTopOf="parent"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/edit_text_mobile"
                        custom:title_text="@string/eshterak" />

                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:text="@={personalVM.mobile}"
                        custom:layout_constraintEnd_toEndOf="parent"
                        custom:layout_constraintTop_toBottomOf="@id/title_edit_text_radif"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/title_edit_text_phone"
                        custom:title_text="@string/mobile_number" />

                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="8"
                        android:text="@={personalVM.phoneNumber}"
                        custom:layout_constraintStart_toStartOf="parent"
                        custom:layout_constraintTop_toBottomOf="@id/title_edit_text_eshterak"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:nextFocus="@id/edit_text_address"
                        custom:title_text="@string/phone" />

                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="@={personalVM.address}"
                        custom:layout_constraintEnd_toEndOf="parent"
                        custom:layout_constraintTop_toBottomOf="@id/title_edit_text_mobile"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:lines="2"
                        custom:nextFocus="@id/title_edit_text_description"
                        custom:title_text="@string/address" />


                    <com.leon.estimate_new.utils.custom_views.TitleEditTextView
                        android:id="@+id/title_edit_text_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:imeOptions="actionDone"
                        android:text="@={personalVM.description}"
                        custom:layout_constraintStart_toStartOf="parent"
                        custom:layout_constraintTop_toBottomOf="@id/title_edit_text_address"
                        custom:layout_constraintWidth_percent="0.5"
                        custom:lines="4"
                        custom:title_text="@string/description" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_close"
            style="@style/Button.Negative"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/medium_dp"
            android:layout_marginBottom="@dimen/medium_dp"
            android:text="@string/close" />

        <Button
            android:id="@+id/button_submit"
            style="@style/Button.Positive"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/medium_dp"
            android:layout_marginBottom="@dimen/medium_dp"
            android:text="@string/services" />
    </RelativeLayout>
</layout>